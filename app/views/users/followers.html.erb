<aside>
  <div class="row my-user-wapper">
    <div class="my-user-image col-md-5">
      <%= render 'users_image' %>
    </div>
    <div class="photo-right col-md-5 offset-md-2">
      <p class="my-user-text mb-0"><%= @user.name %></p>
      <%= render 'relationships/follow_button', user: @user %>
    </div>
  </div>
</aside>
<div>
  <ul class="nav nav-tabs nav-justified mt-3">
    <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link nav-text <%= 'active' if current_page?(user_path(@user)) %>">投稿 <span class="badge badge-secondary"><%= @count_posts %></span></a></li>
    <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link nav-text <%= 'active' if current_page?(followings_user_path(@user)) %>">フォロー <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
    <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">フォロワー <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
    <li class="nav-item"><a href="#" class="nav-link nav-text">いいね</a></li>
  </ul>
  <%= render 'users/users', users: @followers %>
</div>

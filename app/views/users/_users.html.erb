<% if users.any? %>
  <div class="row">
    <% users.each do |user| %>
      <div class="col-12 col-sm-6 col-lg-4">
        <div class="user-card mb-5 text-center">
          <div class="mt-3">
            <% if user.image? %>
              <%= link_to image_tag(user.image.url, class: 'user-picture', alt: 'ユーザー'), user_path(user) %>
            <% else %>
              <%= link_to image_tag("default_user.svg", class: "user-image", alt: 'ユーザー'), user_path(user) %>
            <% end %>
            <p>
              <%= link_to user.name, user_path(user), class: "user-text mb-0" %>
            </p>
          </div>
          <div class="mt-1">
              <%= render 'relationships/follow_button', user: user %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-4 offset-4">
    <p class="paginate"><%= paginate users %></p>
  </div>
<% end %>
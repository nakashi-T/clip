<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-body">
          <div>
            <i class="fas fa-user-circle"></i>
            <p class="user-text mb-0"><%= user.name %></p>
          </div>
          <div>
            <p><%= link_to 'フォロー', user_path(user), class: 'btn btn-primary follow-text'%></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>
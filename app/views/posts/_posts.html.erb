<div class="row">
  <div class="offset-md-2 col-md-6">
    <% posts.each do |post| %>
      <div class="box border mb-5">
        <div class="mt-3 mb-3 ml-3">
          <% if post.user.image? %>
            <%= link_to image_tag(post.user.image.url, class: 'top-user-picture mr-3'), user_path(post.user) %>
          <% else %>
            <%= link_to image_tag("default_user.svg", class: 'top-user-picture mr-3'), user_path(post.user) %>
          <% end %>
          <%= link_to post.user.name, user_path(post.user) %>
        </div>
        <div>
          <a href="/posts/<%= post.id %>">
            <%= image_tag post.image.url, class: 'post-photo' if post.image? %>
          </a>
          <div class="p-3">
            <div class="ml-2">
              <%= render "/evaluations/evaluation_list", post: post  %>
            </div>
            <div>
              <p>いいね</p>
              <!--<p>コメント</p>-->
              <p><%= post.capture %></p>
              <p class="text-right"><%= post.created_at.strftime("%Y/%m/%d %H:%M") %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3 offset-md-1 current_user-wrapper">
    <div class="row">
      <% if current_user.image? %>
          <%= link_to image_tag(current_user.image.url, class: 'current-user-picture mr-3'), user_path(current_user) %>
        <% else %>
          <%= link_to image_tag("default_user.svg", class: 'current-user-picture mr-3'), user_path(current_user) %>
        <% end %>
      <%= link_to current_user.name, user_path(current_user), class: 'current_user-name text-center' %>
    </div>
    <div class="user-follow mt-4">
      <div class="row">
        <div class="col-md-6 text-center">
          <p class="">フォローリスト</p>
        </div>
        <div class="col-md-6 text-center">
          <a href="#">全て表示</a>
        </div>
      </div>
    </div>
  </div>
</div>

<header class="mb-4">
  <nav class="navbar navbar-expand-md navbar-light">
    
    <div class="justify-content-start">
      <a class="navbar-brand" href="/"><span class="mr-1 top-title"><i class="far fa-clipboard"></i>Clip</span></a>
      <a class="search-link" href="/posts/search"><span><i class="fas fa-search"></i></span>検索</a>
    </div>
    
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item"><%= link_to 'ユーザー一覧', users_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to '新規投稿', new_post_path, class: 'nav-link' %></li>
          <li class="nav-item dropdown">
            <% if current_user.image? %>
                  <%= image_tag current_user.image.url, alt: 'ユーザー' , class: 'photo-nav nav-user-image nav-link dropdown-toggle', 'data-toggle': :dropdown %>
              <% else %>
                  <%= image_tag "default_user.svg", alt: 'ユーザー' , class: "photo-nav nav-user-image nav-link dropdown-toggle", 'data-toggle': :dropdown %>
              <% end %>
            <a href="#" class="text-nav nav-link dropdown-toggle" data-toggle="dropdown">
              <%= current_user.name %>
            </a>
            <div class="dropdown-menu dropdown-menu-right">
              <%= link_to 'マイプロフィール', user_path(current_user), class: "dropdown-item" %>
              <%= link_to 'ログアウト', logout_path, method: :delete, class: "dropdown-item" %>
              <%= link_to '退会する', quit_path, method: :delete, data: { confirm: '本当に退会してもよろしいですか？' }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item"><%= link_to 'ユーザー一覧', users_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
          <li class="nav-item"><%= link_to 'ユーザー登録', signup_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>